@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<form asp-action="Upload" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input type="text" class="form-control" id="exampleInputEmail1" name="Name" required>
    </div>
    <div class="custom-file mb-3">
        <input type="file" class="custom-file-input" id="validatedCustomFile" name="Files" multiple required>
        <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>